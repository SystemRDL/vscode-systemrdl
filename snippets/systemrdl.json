{
    "Addrmap": {
        "prefix": ["addrmap"],
        "body": ["addrmap ${1:blkname} {", 
            "\tname = \"$2\";",
            "\tdesc = \"$3\";",
            "\tdefault regwidth = 32;",
            "\tdefault sw = rw;",
            "\tdefault hw = r;",
            "\trsvdset = 0;", 
            "\t$0"],
        "description": "Address map component."
    },

    "Enum": {
        "prefix": ["enum"],
        "body": ["enum ${1:enunname} {", 
            "\t${2:e0} = 0  { desc = \"$3\"; };",
            "\t${4:e1} = 1  { desc = \"$5\"; };",
            "\t$0",
            "};"],
        "description": "Enumeration component."
    },
    
    "Field": {
        "prefix": ["field"],
        "body": ["field {", 
            "\thw = ${3:r};",
            "\tsw = ${4:rw};",
            "\tname = \"${5:Field name}\";",
            "\tdesc =\"${0:Field description}\";",
            "} ${1:fieldname} = ${2:[1:0]};"],
        "description": "Field component."
    },

    "Define": {
        "prefix": ["`define"],
        "body": ["`define \"$0\""],
        "description": "Define directive."
    },

    "Elsif": {
        "prefix": ["`elsif"],
        "body": ["`elsif \"$0\""],
        "description": "Elsif directive."
    },

    "Ifdef-end": {
        "prefix": ["`ifdef"],
        "body": ["`ifdef $1",
            "\t$0",
            "`endif"],
        "description": "Ifdef/end directive."
    },

    "Ifdef-else": {
        "prefix": ["`ifdef"],
        "body": ["`ifdef $1",
            "\t$1",
            "`else",
            "\t$0",
            "`endif"],
        "description": "Ifdef/else directive."
    },

    "Ifndef-end": {
        "prefix": ["`ifndef"],
        "body": ["`ifndef $1",
            "\t$0",
            "`endif"],
        "description": "Ifndef/end directive."
    },

    "Ifndef-else": {
        "prefix": ["`ifndef"],
        "body": ["`ifndef $1",
            "\t$1",
            "`else",
            "\t$0",
            "`endif"],
        "description": "Ifndef/else directive."
    },

    "Include": {
        "prefix": ["`include"],
        "body": ["`include \"$0\""],
        "description": "Include directive."
    },

    "Memory": {
        "prefix": ["mem"],
        "body": ["mem ${1:memname} {",
            "\tmementries = ${2:4096};",
            "\tmemwidth   = ${3:32};",
            "\t$0"],
        "description": "Memory component."
    },

    "Reg": {
        "prefix": ["reg"],
        "body": ["reg {", 
            "\tname = \"${3:Register name}\";",
            "\tdesc =\"${4:Register description}\";",
            "\t$0",
            "} ${1:regname} @ ${2:0x0};"],
        "description": "Register component."
    },

    "Signal": {
        "prefix": ["signal"],
        "body": ["signal {", 
            "\tsignalwidth = ${0:32};",
            "} ${1:signame};"],
        "description": "Signal component."
    },

    "Undef": {
        "prefix": ["`undef"],
        "body": ["`undef \"$0\""],
        "description": "Undefine directive."
    },
    
    
}
